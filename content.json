{
	"Format": "1.14.0",
	"ConfigSchema": {
		//Allows the scythe to be recolored
		"ScytheColorEnabled": {
			"AllowMultiple": "false",
			"AllowValues": "true, false",
			"Default": "true"
		},
		//Choose the color of the scythe
		"ScytheColor": {
			"AllowValues": "auto, base, copper, iron, gold, iridium",
			"Default": "auto"
		},
		//Allows the Golden Scythe to be recolored	
		"BigScytheColorEnabled": {
			"AllowMultiple": "false",
			"AllowValues": "true, false",
			"Default": "true"
		},
		//Choose the color of the scythe
		"BigScytheColor": {
			"AllowValues": "auto, gold, iridium",
			"Default": "auto"
		},
		//Allows the Copper Pan to be recolored
		"PanColorEnabled": {
			"AllowMultiple": "false",
			"AllowValues": "true, false",
			"Default": "true"
		},
		//Choose the color of the pan
		"PanColor": {
			"AllowValues": "auto, base, copper, iron, gold, iridium",
			"Default": "auto"
		},
		//Allows the Milk Pail to be recolored
